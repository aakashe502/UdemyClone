<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.learnonline">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Activities.MoreCourseActivity"></activity>
        <activity android:name=".Activities.SubjectActivity" />
        <activity
            android:name=".Activities.PlayVideo"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".Activities.UploadVideos"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity android:name=".Activities.AddCourseInformation" />
        <activity android:name=".Activities.EditCourseActivity" />
        <activity android:name=".CourseInfoActivity" />
        <activity android:name=".AddnewCourse" />
        <activity android:name=".InstructMode" />
        <activity android:name=".MyCourses" />
        <activity android:name=".Account" />
        <activity android:name=".WishList" />
        <activity
            android:name=".SearchActivity"
            android:theme="@style/APpnew" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".MainInstructorActivity" />
        <activity android:name=".RegisterInstructor" />
        <activity android:name=".MainUserActivity" />
        <activity android:name=".RegisterUser" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".MyFirebaseMessaging"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>